                    `
                }
            };

            if (forms[formId]) {
                formTitle = forms[formId].title;
                formHtml = forms[formId].html;
            } else {
                formTitle = 'Form Not Found';
                formHtml = '<p class="text-center text-red-500">The requested form could not be loaded.</p>';
            }

            modalContentArea.innerHTML = `
                <h3 class="text-2xl font-bold text-gray-800 mb-6 text-center">${formTitle}</h3>
                ${formHtml}
            `;
            modalContainer.classList.add('show');

            // Add event listeners to the new form (if any)
            const currentForm = modalContentArea.querySelector('form');
            if (currentForm) {
                currentForm.addEventListener('submit', function(event) {
                    event.preventDefault(); // Prevent default form submission
                    // In a real application, you would send this data to a backend server.
                    console.log(`Form submitted: ${formTitle}`);
                    const formData = new FormData(event.target);
                    const data = {};
                    for (let [key, value] of formData.entries()) {
                        data[key] = value;
                    }
                    console.log(data);

                    if (formId === 'recurringGiftForm') {
                        // For recurring gifts, redirect to Stripe subscription link
                        const stripeSubscriptionLink = `https://donate.stripe.com/9B63cxdvBaaidvL3FY8g000`;
                        alert('You will now be redirected to Stripe to complete your recurring gift setup. Please enter your desired monthly amount there.');
                        window.open(stripeSubscriptionLink, '_blank');
                    } else {
                        alert('Your request has been submitted! We will get back to you soon.'); // Using alert for demo purposes
                    }
                    hideModal(); // Hide the modal after submission
                });
            }
        }

        // Function to hide the modal
        function hideModal() {
            modalContainer.classList.remove('show');
            modalContentArea.innerHTML = ''; // Clear content when hidden
        }

        // Event listener for the main generate advice button (LLM feature)
        generateAdviceBtn.addEventListener('click', async () => {
            const scenario = outreachScenarioInput.value.trim();

            // Hide previous outputs and errors
            outreachAdviceOutput.classList.add('hidden');
            adviceError.classList.add('hidden');
            adviceText.textContent = '';

            if (scenario) {
                adviceLoading.classList.remove('hidden'); // Show loading indicator
                try {
                    const prompt = `As a wise and compassionate spiritual advisor for a Christian ministry, provide advice based on the following outreach or community support scenario. Make the advice compassionate, practical, and rooted in biblical principles. Scenario: "${scenario}"`;
                    const advice = await callGeminiApi(prompt);
                    if (advice) {
                        adviceText.textContent = advice;
                        outreachAdviceOutput.classList.remove('hidden'); // Show output
                    } else {
                        adviceError.classList.remove('hidden'); // Show error if no advice
                    }
                } catch (err) {
                    console.error('Error calling Gemini API:', err);
                    adviceError.classList.remove('hidden'); // Show error
                } finally {
                    adviceLoading.classList.add('hidden'); // Hide loading indicator
                }
            } else {
                // Optionally, show a message if the input is empty
                adviceText.textContent = 'Please enter a scenario to get advice.';
                outreachAdviceOutput.classList.remove('hidden');
            }
        });

        // Function to handle API call with exponential backoff
        async function callGeminiApi(prompt, retries = 3, delay = 1000) {
            let chatHistory = [];
            chatHistory.push({ role: "user", parts: [{ text: prompt }] });
            const payload = { contents: chatHistory };
            const apiKey = ""; // If you want to use models other than gemini-2.5-flash-preview-05-20 or imagen-3.0-generate-002, provide an API key here. Otherwise, leave this as-is.
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;

            for (let i = 0; i < retries; i++) {
                try {
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }

                    const result = await response.json();
                    if (result.candidates && result.candidates.length > 0 &&
                        result.candidates[0].content && result.candidates[0].content.parts &&
                        result.candidates[0].content.parts.length > 0) {
                        return result.candidates[0].content.parts[0].text;
                    } else {
                        throw new Error('Unexpected API response structure or missing content.');
                    }
                } catch (error) {
                    console.error(`Attempt ${i + 1} failed: ${error.message}`);
                    if (i < retries - 1) {
                        await new Promise(res => setTimeout(res, delay));
                        delay *= 2;
                    } else {
                        throw error;
                    }
                }
            }
            return null;
        }
    </script>
</body>
</html>
